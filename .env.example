# Application
PORT=3000
SITE_URL=

# Email (OVH example)
EMAIL_USER=contact@mathiaslegrand.cloud
EMAIL_PASS=your-ovh-password
CONTACT_EMAIL=

# Database selection
# Set DB=mariadb to use MariaDB, otherwise SQLite local file is used
DB=mariadb

# MariaDB connection
MARIADB_HOST=127.0.0.1
MARIADB_PORT=3306
MARIADB_DATABASE=portfolio
MARIADB_USER=portfolio
MARIADB_PASSWORD=portfolio
## Alternatively use a full URL (overrides host/port/user/password/db)
# MARIADB_URL=mysql://user:pass@host:3306/portfolio?ssl=true
## TLS/SSL options for some cloud providers
# MARIADB_SSL=true
# MARIADB_SSL_REJECT_UNAUTHORIZED=false
# MARIADB_CA_PATH=/path/to/ca.pem

# SQLite optional path
# DB_PATH=./data/portfolio.db
# Admin (basic auth for hidden interface at /__admin)
ADMIN_USER=admin
ADMIN_PASS=change-me
# Optionally customize the hidden admin path
# ADMIN_PATH=/__super-secret-admin
# Sessions and secure login
SESSION_SECRET=please-change-me
ADMIN_EMAIL=contact@mathiaslegrand.cloud
# Optional bcrypt hash to avoid storing clear password (overrides ADMIN_PASS if set)
# Generate with: node -e "console.log(require('bcryptjs').hashSync(process.argv[1], 12))" 'your-password'
# ADMIN_PASSWORD_HASH=$2a$12$exampleHashedValue...
# Variables d'environnement pour le portfolio

# Configuration Email OVH
EMAIL_USER=votre.email@votre-domaine.com
EMAIL_PASS=votre-mot-de-passe

# Configuration SMTP OVH (ssl0.ovh.net)
# HOST: ssl0.ovh.net
# PORT: 587 (STARTTLS) ou 465 (SSL/TLS)
# SECURE: false pour 587, true pour 465

# Configuration du serveur
PORT=3000
NODE_ENV=development

